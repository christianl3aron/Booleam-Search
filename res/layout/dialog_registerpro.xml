<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >
    
			<LinearLayout
			android:layout_width="570dp"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:paddingTop="30dp"
			android:paddingRight="20dp"
			android:paddingLeft="20dp"
			android:paddingBottom="20dp"
			android:orientation="vertical"
			android:background="#dafa50"
			>
						<LinearLayout 
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:orientation="vertical"
						    android:gravity="center"
						    android:background="@drawable/rounded_edittext"
						    >
						<LinearLayout
						android:layout_width="520dp"
						android:layout_height="match_parent"
						android:paddingBottom="20dp"
						android:paddingLeft="20dp"
						android:orientation="horizontal">

							<ImageView
							    android:id="@+id/img_producto_dialog"
							    android:layout_width="200dp"
							    android:layout_height="200dp"
							    android:src="@drawable/extension"
							    android:contentDescription="imagen de publicacion" />

							<LinearLayout
							    android:layout_width="240dp"
							    android:layout_marginLeft="40dp"
							    android:paddingTop="30dp"
							    android:layout_height="match_parent"
							    android:orientation="vertical" >
							    		
							    	

									    	<TextView
									        android:id="@+id/txt_nomproducto_dialog"
									        android:layout_width="match_parent"
									        android:layout_height="wrap_content"
									        android:textColor="#555"
									        android:maxLines="3"
									        android:typeface="sans"
									        android:textSize="19sp"
									        android:textStyle="italic|bold"
									        android:text="ExtensiÃ³n profesional naranja x 50 ms" />

									    	<TextView
									    	    android:id="@+id/txt_codigo_dialog"
									    	    android:layout_width="wrap_content"
									    	    android:layout_height="wrap_content"
									    	    android:layout_marginTop="15dp"
									    	    android:text="1564515656"
									    	    android:textColor="#555"
									    	    android:textSize="15sp" />

							    
							    	
							    	
							    	
							</LinearLayout>
						    
						</LinearLayout>

						<TextView
						    android:id="@+id/textView2"
						    android:layout_width="520dp"
						    android:layout_height="wrap_content"
						    android:paddingTop="10dp"
						    android:paddingLeft="30dp"
						    android:paddingRight="20dp"
						    android:textSize="20sp"
						    android:text="Resumen"
						    android:textColor="#555"
						    android:textStyle="italic|bold" />

						<LinearLayout 
						    android:layout_width="match_parent"
						    android:layout_marginLeft="30dp"
						    android:layout_marginRight="30dp"
						    android:layout_height="2dp"
						    android:background="#aaa">
						    
						</LinearLayout>
						<EditText
						    android:id="@+id/txt_desc_dialog"
						    android:layout_width="520dp"
						    android:layout_height="wrap_content"
						    android:gravity="top"
						    android:paddingLeft="30dp"
						    android:paddingTop="10dp"
						    android:layout_marginBottom="20dp"
						    android:ems="10"
						    android:inputType="textMultiLine" 
						    android:cursorVisible="false" 
					        android:focusable="false" 
					        android:focusableInTouchMode="false"
			    		    android:clickable="false"
						    android:lines="10"
						    android:background="#fff">

						</EditText>
				</LinearLayout>
						
			</LinearLayout>
    

</RelativeLayout>